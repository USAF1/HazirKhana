
@{
    ViewData["Title"] = "AdminRestaurantAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container bg-white">
    <div class="row">
        <form action="">
            <h1 class="mt-4 p-3">Add Restaurant</h1>
            <p class="mx-3">Please Fill The Required Form </p> <hr>
            <div class="row mt-4">
                <div class="col-md-6">
                    <label for="name">Name *</label>
                    <input type="text" name="" id="" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Restaurant Name"><br>
                    <label for="name">Email *</label>
                    <input type="email" name="" id="" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Email">
                </div>
                <div class="col-md-6">
                    <label for="name">Contact Mob *</label>
                    <input type="number" name="" id="" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Contact"><br>
                    <label for="name">Contact Tel *</label>
                    <input type="number" name="" id="" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Telephone">
                </div>
            </div><hr class="bg-dark mt-4">

            <div class="row mt-4">
                <label for="address"> Address *</label><br>
                <textarea name="" id="" cols="10" style="resize: none; background-color: #FCFBFB; width: 90%;" class="form-control mt-2 p-2 mx-2" required placeholder="Enter Address" rows="3"></textarea>
                <div class="col-md-6 mt-3">
                    <label for="name">Province *</label>
                    <select name="" style="background-color: #FCFBFB;" class="form-select w-50 mt-2 p-2" id="">
                        <option value="">Select Province</option>
                        <option value="kpk">KPK</option>
                        <option value="sindh">Sindh</option>
                    </select>
                    <label class="mt-4" for="name">Postal Code *</label>
                    <input type="email" name="" id="" class="form-control mt-2 w-50 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Postal Code">

                </div>
                <div class="col-md-6 mt-3">
                    <label for="name">City *</label>
                    <select name="" style="background-color: #FCFBFB;" class="form-select w-50 mt-2 p-2" id="">
                        <option value="">Select City</option>
                        <option value="peshawar">Peshawar</option>
                        <option value="Charsada">Charsda</option>
                    </select>
                </div>
            </div><hr class="mt-5">
            <br><br>
            <div class="row">
                <label for="address"> Description *</label><br>
                <textarea name="" id="" cols="10" style="resize: none; background-color: #FCFBFB; width: 90%;" class="form-control mt-2 p-2 mx-2" required placeholder="Enter Description" rows="3"></textarea>
                <label for="" class="mt-4">Select Cuisines</label>

                <div class="form-check form-check-inline mx-4 mt-2">
                    <input class="form-check-input" type="checkbox" id="" value="Chines">
                    <label class="form-check-label" for="Chines">Chines</label>

                    <div class="form-check form-check-inline mx-3 ">
                        <input class="form-check-input  " type="checkbox" id="" value="Italian">
                        <label class="form-check-label" for="Italian">Italian</label>
                    </div>
                    <div class="form-check form-check-inline mx-3 ">
                        <input class="form-check-input" type="checkbox" id="" value="Russian">
                        <label class="form-check-label" for="Russian">Russian</label>
                    </div>
                    <div class="form-check form-check-inline mx-3">
                        <input class="form-check-input " type="checkbox" id="" value="Desi">
                        <label class="form-check-label" for="Desi">Desi</label>
                    </div>
                    <div class="form-check form-check-inline mx-3">
                        <input class="form-check-input" type="checkbox" id="" value="Junk Food">
                        <label class="form-check-label" for="Junk">Junk Food</label>
                    </div>
                    <div class="form-check form-check-inline mx-3">
                        <input class="form-check-input" type="checkbox" id="" value="Arabian">
                        <label class="form-check-label" for="Arabian">Arabian</label>
                    </div>
                    <div class="form-check form-check-inline mx-3">
                        <input class="form-check-input " type="checkbox" id="" value="Sweet">
                        <label class="form-check-label" for="Sweet">Sweet</label>
                    </div>
                </div>
                <div class="col-md-6 mt-4">
                    <label for="name">Sales Tax *</label>
                    <input type="number" name="" id="" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter Sales Tax"><br>
                </div>
                <div class="col-md-6 mt-4">
                    <label for="name">Order Load Time  *</label>
                    <input type="number" name="" id="" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder=" Enter  Order Load Time in Minutes"><br>

                </div>

            </div>
            <div class="row">
                <label for="" class="mt-3">Reservation *</label>
                <div class="form-check mx-3">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="Yes">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Yes
                    </label>
                </div>
                <div class="form-check mx-3">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="No" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        No
                    </label>
                </div>
            </div>
            <hr class="mt-4">
            <div class="row mt-5">
                <div class="col-md-6">
                    <label for="name">Logo *</label>
                    <input type="file" name="" id="" class="form-control mt-2 w-75 p-2" required style="background-color: #FCFBFB;" placeholder=" Upload Logo "><br>

                </div>
                <div class="col-md-6">
                    <label for="name">Banner *</label>
                    <input type="file" name="" id="" class="form-control w-75 mt-2 p-2" required style="background-color: #FCFBFB;" placeholder="Upload Banner"><br>

                </div>

            </div>
            <button type="submit" class="myBtn mt-2">Submit Application</button>
            <br><br>

        </form>
    </div>
</div>


